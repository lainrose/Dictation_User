<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.cbnu.sweng.randombox.dictation_user.dictation_user.ui.sign.SignUpActivity"
    android:background="#DDDDDD">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme" />

    <EditText
        android:id="@+id/etCertifiedEmail"
        android:textSize="@dimen/text_size"
        android:textColor="#333333"
        android:textColorHint="#ffaaaaaa"
        android:background="#ffffffff"
        android:paddingLeft="20.0dip"
        android:layout_width="fill_parent"
        android:layout_height="48.0dip"
        android:layout_marginLeft="20.0dip"
        android:layout_marginTop="72.0dip"
        android:layout_marginRight="20.0dip"
        android:layout_marginBottom="2.0dip"
        android:hint="이메일 주소"
        android:layout_centerHorizontal="true"
        android:inputType="textEmailAddress"
        android:imeOptions="actionNext">
        <requestFocus />
    </EditText>

    <EditText android:textSize="14.0sp"
        android:textColor="#333333" android:textColorHint="#ffaaaaaa"
        android:id="@+id/etCertifiedNum"
        android:background="#ffffffff"
        android:paddingLeft="20.0dip"
        android:layout_width="fill_parent"
        android:layout_height="48.0dip"
        android:layout_marginLeft="20.0dip"
        android:layout_marginRight="20.0dip"
        android:layout_marginBottom="2.0dip"
        android:hint="비밀번호(8자이상)"
        android:password="true"
        android:layout_below="@id/etCertifiedEmail"
        android:layout_centerHorizontal="true"
        android:inputType="textVisiblePassword"
        android:imeOptions="actionNext" />

    <EditText android:textSize="14.0sp"
        android:textColor="#333333"
        android:textColorHint="#ffaaaaaa"
        android:id="@+id/et_signup_nick"
        android:background="#ffffffff"
        android:paddingLeft="20.0dip"
        android:layout_width="fill_parent"
        android:layout_height="48.0dip"
        android:layout_marginLeft="20.0dip"
        android:layout_marginRight="20.0dip"
        android:layout_marginBottom="10.0dip"
        android:hint="이름(별명)"
        android:layout_below="@id/etCertifiedNum"
        android:layout_centerHorizontal="true"
        android:imeOptions="actionDone" />

    <Button
        android:id="@+id/btCertified"
        android:textColor="#FFFFFF"
        android:layout_height="40.0dip"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20.0dip"
        android:layout_marginRight="20.0dip"
        android:layout_marginBottom="10.0dip"
        android:layout_centerHorizontal="true"
        android:layout_width="fill_parent"
        android:background="@drawable/border_sign"
        android:text="가입하기"
        android:textSize="14.0sp"
        android:layout_below="@id/et_signup_nick"
        android:onClick="Onclick_Signup"/>

</RelativeLayout>

